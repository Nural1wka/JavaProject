<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="925.0" style="-fx-background-color: #35b9de;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.files.controllers.OrderCardController">
    <children>
        <HBox alignment="CENTER" prefHeight="250.0" prefWidth="925.0">
            <children>
                <ImageView fx:id="img" fitHeight="250.0" fitWidth="250.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS" />
                <Label fx:id="title" alignment="CENTER" prefHeight="250.0" prefWidth="300.0" text="TITLE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label fx:id="price" alignment="CENTER" prefHeight="250.0" prefWidth="200.0" text="PRICE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" prefHeight="250.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeClick" prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 100;" text="-">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="addButton" alignment="CENTER" mnemonicParsing="false" onAction="#addClick" prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 100;" text="+">
                            <HBox.margin>
                                <Insets />
                            </HBox.margin>
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <AnchorPane prefHeight="200.0" prefWidth="200.0">
                    <children>
                        <Label fx:id="quantityLabel" alignment="CENTER" layoutX="8.0" layoutY="99.0" prefHeight="53.0" prefWidth="101.0" text="0">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </children>
        </HBox>
    </children>
</AnchorPane>
